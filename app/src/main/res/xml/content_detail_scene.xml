<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeIn">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_file_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="0dp"
            android:alpha="0.0" />
        <Constraint
            android:id="@+id/tv_download_status"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            motion:layout_constraintTop_toBottomOf="@+id/tv_file_name"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="@dimen/margin_normal"
            android:alpha="0.0" />
        <Constraint
            android:id="@+id/tv_file_name_title"
            motion:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="@+id/tv_file_name"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0.0" />
        <Constraint
            android:id="@+id/tv_download_status_title"
            motion:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="@+id/tv_download_status"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_file_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="@dimen/margin_large"
            android:alpha="1.0" />
        <Constraint
            android:id="@+id/tv_download_status"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            motion:layout_constraintTop_toBottomOf="@+id/tv_file_name"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="@dimen/margin_normal"
            android:alpha="1.0" />
        <Constraint
            android:id="@+id/tv_download_status_title"
            motion:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="@+id/tv_download_status"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1.0" />
        <Constraint
            android:id="@+id/tv_file_name_title"
            motion:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            motion:layout_constraintTop_toTopOf="@+id/tv_file_name"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1.0" />
    </ConstraintSet>
</MotionScene>